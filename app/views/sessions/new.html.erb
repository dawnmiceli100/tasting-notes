<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default sign-in-sign-up-panel">
    <div class="panel-heading">
      <strong>Sign in</strong>
    </div>  
    <div class="panel-body">
      <%= form_tag '/sign_in' do %>
        <fieldset>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
              <%= email_field_tag(:email, '', class: "form-control", placeholder: "Email") %>
            </div>  
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
              <%= password_field_tag(:password, '', class: "form-control", placeholder: "Password") %>
            </div>  
          </div>
          <br/>
          <%= submit_tag "Sign in", class: "btn btn-lg btn-sign-in btn-block" %>
        </fieldset>  
      <% end %>
    </div>      
  </div>  
</div>      