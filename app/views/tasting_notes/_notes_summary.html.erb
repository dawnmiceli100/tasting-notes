<div class="list-group">
  <% notes.each do |note| %>
    <div class="list-group-item well col-md-8">
      <div class="row">
        <span class="col-md-1 flaticon-glass-<%= note.wine_type.name %> glass-color-<%= note.wine_type.name %>"></span>
        <div class="col-md-11">
          <h4 class="list-group-item-heading"><%= link_to note.wine.vintage.to_s + ' ' + note.wine.description, wine_tasting_note_path(note.wine, note) %></h4>
          <p class="list-group-item-text">Tasted on <%= friendly_date(note.tasting_date) %> by <%= note.user.full_name %></p>
          <p class="list-group-item-text">Overall Quality: <%= note.quality %></p>
          <p class="list-group-item-text">Comments: <em>"<%= note.comments %>"</em></p> 
        </div>  
      </div>
    </div>     
  <% end %> 
</div>

<div class="row">
  <div class="col-md-8 paginator">
    <%= paginate @tasting_notes %>
  </div>
</div>
