<%= render 'shared/errors', model_object: @user %> 

<%= render "shared/content_title", title: "Sign up" %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :full_name, "Full Name" %>
      <%= f.text_field :full_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <br/>
    <%= f.submit value: "Sign up", class: "btn btn-primary" %>
  <% end %>
</div>      